<phone:PhoneApplicationPage 
    x:Class="vSongBook.AaStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#FFFA6800">
        <!--Pivot Control-->
        <controls:Pivot Title="VSONGBOOK" Foreground="white">
            <!--Pivot item one-->
            <controls:PivotItem Header="welcome" Foreground="white">
                <Grid x:Name="ContentPanel1" Margin="10,0,10,0"  Background="White">
                    <ScrollViewer Margin="0,0,0,0" Name="scrollViewer1">
                        <TextBlock x:Name="ContentText1" Text="God bless you for taking time to install this great app on your device. vSongBook is a simple app that turns your a device into a virtual songbook. It gives LYRICS of most songs sung in church but not the TUNE!  $This tutorial takes about two minutes. You'll get much more out vSongBook if you read it.  $SWIPE TO THE LEFT TO CONTINUE" TextWrapping="Wrap" 
                     FontSize="32" Foreground="Black"
                     Style="{StaticResource PhoneTextNormalStyle}" />
                    </ScrollViewer>
                </Grid>
            </controls:PivotItem>

            <!--Pivot item two-->
            <controls:PivotItem Header="features" Foreground="white">
                <Grid x:Name="ContentPanel2" Margin="10,0,10,0"  Background="White">
                    <ScrollViewer Margin="0,0,0,0" Name="scrollViewer2">
                        <TextBlock x:Name="ContentText2" Text="* ALL SONGS IN ONE APP!  $This application contains the following songs:  $ - 750 Songs of Worship,  $ - 215 Nyimbo za Injili,  $ - 1038 Believers Songs,  $ - 383 Nyimbo za Wokovu,  $ - 720 Redemption Songs, $- 138 Tenzi Za Rohoni,  $- 603 Nyimbo cia Kuinira Ngai.  $ $You can search any song among the possible 3885 Songs in the app.  $ If you want to search for songs you don't need to know the song number or title. Simply tap the Search Icon and type the words in the song and if your search is valid you will begin to see the results even before you finish typing. You can open the song from the quick results that pop up as you search or you may press enter to see a list of search results with a count of the results yielded so far.  $ * MY SONGS (NOTEPAD)  $Because there are other songs that you hear being sung maybe in church or you got their lyrics from on-line sources like the internet or Whatsapp, This feature might help you save this information safely. Save you songs and sing them when you can whenever you can!  $" TextWrapping="Wrap" 
                     FontSize="32" Foreground="Black"
                     Style="{StaticResource PhoneTextNormalStyle}" />
                    </ScrollViewer>
                </Grid>
            </controls:PivotItem>

            <controls:PivotItem Header="support" Foreground="white">
                <Grid x:Name="ContentPanel3" Margin="10,0,10,0"  Background="White">
                    <ScrollViewer Margin="0,0,0,0" Name="scrollViewer3">
                        <TextBlock x:Name="ContentText3" Text="vSongBook is supported by people like you and your friends in the following ways: $ * rating the app on the Windows Store $ * Recommending and sharing the app with friends $ * Submit complaining about anything on the app $ * Sending me soft copies of songs you want to be included in the app. $$ You can reach me through: $ .:|* +254711474787 $ .:|* smataweb@gmail.com $ .:|* Facebook @ fb.me/jaxila $ .:|* Tweet me @jaksiro$" TextWrapping="Wrap" 
                     FontSize="32" Foreground="Black"
                     Style="{StaticResource PhoneTextNormalStyle}" />
                    </ScrollViewer>
                </Grid>
            </controls:PivotItem>

            <controls:PivotItem Header="payment" Foreground="white">
                <Grid x:Name="ContentPanel4" Margin="10,0,10,0"  Background="White">
                     <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                      </Grid.RowDefinitions>
                    
                    <ScrollViewer Margin="0,0,0,90" Name="scrollViewer4" Height="517" Grid.RowSpan="2">
                        <TextBlock x:Name="ContentText4" Text="this app is only free for the first 5 days after installation after which it you want to continue using you will have to pay Kshs. 300 or 3 USD to the developer in any of the following ways: $ M-Pesa to 0711474787 $ AirtelMoney to 0731973180 $$ alternatively if you are not in Kenya you can use Paypal to smataweb@gmail.com $$ Upon payment you will have to chat with +254711474787 by sms or whatsapp to receive the unlock code which you use to unlock this app." TextWrapping="Wrap" 
                     FontSize="32" Foreground="Black"
                     Style="{StaticResource PhoneTextNormalStyle}" />
                     </ScrollViewer>
                     <Button Grid.Row="1" Click="Accept_This" Content="Accept" Height="100" HorizontalAlignment="Left" Margin="92,0,0,0" Name="AcceptBtn" VerticalAlignment="Bottom" Width="300" Background="OrangeRed" FontSize="40" />

                </Grid>
            </controls:PivotItem>
        </controls:Pivot>
        
    </Grid>

