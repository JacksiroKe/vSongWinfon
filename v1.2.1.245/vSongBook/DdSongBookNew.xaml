    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True" BackgroundColor="#FFFA6800" ForegroundColor="White">
            <shell:ApplicationBarIconButton IconUri="/Assets/appbar/appbar_search.png" Text="Search"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/appbar/appbar_edit.png" Text="My Songs"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/appbar/appbar_favall.png" Text="Favorites" />
            <shell:ApplicationBarIconButton IconUri="/Assets/appbar/appbar_settings.png" Text="Settings"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="App Tutorial" />
                <shell:ApplicationBarMenuItem Text="About this App"/>
