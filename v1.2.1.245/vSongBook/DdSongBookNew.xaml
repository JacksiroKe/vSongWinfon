    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <Grid x:Name="LayoutRoot" Background="#FFFA6800">
        <ProgressBar Name="pProgress" IsIndeterminate="True" Height="50" Foreground="White" />

        <phone:Pivot Title="VSONGBOOK" x:Name="pSongBook" Foreground="White" 
             SelectionChanged="OnPivotSelectionChanged">

            <phone:PivotItem x:Name="MultiselectLbxItem1" Header="Worship" Background="OrangeRed" Foreground="White" >
                <toolkit:LongListMultiSelector x:Name="SongList1" Margin="0,0,-12,0"
                    ItemsSource="{StaticResource SongCollection}" LayoutMode="List"
                    SelectionChanged="OnSongList1SelectionChanged"
                    IsSelectionEnabledChanged="OnSongList1IsSelectionEnabledChanged"
                    ItemTemplate="{StaticResource SongItemTemplate1}" />
